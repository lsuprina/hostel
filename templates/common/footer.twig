<div class="top-footer-color">
    <div class="container">
    <!--Grid row-->
    <div class="row py-4 d-flex align-items-center justify-content-center">

        <!--Grid column-->
        <div class="col-12 col-md-5 text-left  mb-md-0">
        <h6 class="mb-0 white-text text-center text-md-left">
            <strong>{{footer.socialNetworkLabel}}</strong>
        </h6>
        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-12 col-md-7 text-center text-md-right">
            {% for entry in footer.socialNetwork.all() %}
                <a class="p-2 m-2 fa-lg fb-ic ml-0" href="{{entry.socialNetworkUrl}}" target="_blank">
                    <i class="{{entry.socialNetworkIcon}} white-text mr-lg-4"> </i>
                </a>        
            {% endfor %}
        </div>
        <!--Grid column-->

    </div>
    <!--Grid row-->
    </div>
</div>

<!--Footer Links-->
<div class="container mt-5 mb-4 text-center text-md-left">
    <div class="row mt-3">

    <!--First column-->
    <div class="col-md-3 col-lg-4 col-xl-3 mb-4 dark-grey-text">
        <h6 class="text-uppercase font-weight-bold">
        <strong>{{footer.heading}}</strong>
        </h6>
        <hr class="cyan mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
        {{footer.description}}
    </div>
    <!--/.First column-->

    <!--Second column-->
    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4 dark-grey-text">
        <h6 class="text-uppercase font-weight-bold">
        <strong>{{footer.leftMenuLabel}}</strong>
        </h6>
        <hr class="cyan mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
        {% for entry in footer.footerLeftMenu.all() %}
            <p>
            <a href="{{entry.menuItem}}" class="dark-grey-text">{{entry.menuItem.getCustomText()}}</a>
            </p>            
        {% endfor %}
    </div>
    <!--/.Second column-->

    <!--Third column-->
    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4 dark-grey-text">
        <h6 class="text-uppercase font-weight-bold">
        <strong>{{footer.rightMenuLabel}}</strong>
        </h6>
        <hr class="cyan mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
        {% for entry in footer.footerRightMenu.all() %}
            <p>
            <a href="{{entry.menuItem}}" class="dark-grey-text">{{entry.menuItem.getCustomText()}}</a>
            </p>            
        {% endfor %}
    </div>
    <!--/.Third column-->

    <!--Fourth column-->
    <div class="col-md-4 col-lg-3 col-xl-3 dark-grey-text">
        <h6 class="text-uppercase font-weight-bold">
        <strong>{{footer.contactLabel}}</strong>
        </h6>
        <hr class="cyan mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
        {% for entry in footer.contact.all() %}
            <p><i class="{{entry.contactIcon.value}} mr-3"></i>{{entry.contactValue}}</p>
        {% endfor %}
    </div>
    <!--/.Fourth column-->

    </div>
</div>
<!--/.Footer Links-->

<!-- Copyright-->
<div class="footer-copyright py-3 text-center">
    <div class="container-fluid">
    {% set copyright = footer.copyrightLabel|split(' ', 4) %}
    {{copyright[0]}} {{copyright[1]}} {{copyright[2]}}<a href="{{footer.copyrightLink}}" target="_blank"> {{copyright[3]}}</a>
    </div>
</div>
<!--/.Copyright -->